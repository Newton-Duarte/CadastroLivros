
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TelaPrincipal"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/livro" />

        <TextView
            android:text="@string/app_name"
            android:layout_gravity="center_vertical"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnCadastrar"
        android:text="@string/txt_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:text="@string/txt_pesquisarpor"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <RadioGroup
        android:id="@+id/rdgPesquisarPor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    
    
        <RadioButton
            android:id="@+id/rbPesquisarPorTitulo"
            android:text="@string/txt_titulo"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbPesquisarPorAno"
            android:text="@string/txt_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbPesquisarPorAutor"
            android:text="Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/edtPesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnPesquisar"
        android:text="@string/txt_pesquisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"/>


</LinearLayout>
